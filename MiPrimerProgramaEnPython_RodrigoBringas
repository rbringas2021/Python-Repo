############################################################
# Calcular nota final del estudiante en base a 2 exámenes. #
############################################################
print("")
NOTA1 = input("Ingrese (Nota 1) : ")
print("-------------------------------------------------------")
print("Aclaración: Nota 1 equivalente al 40% de la nota final.")
print("-------------------------------------------------------")
print("")

PNOTA1 = float(NOTA1) * 40/100

print("\tSu nota parcial es : " + str(PNOTA1))
print("")
NOTA2 = input("Ingrese (Nota 2) : ")
print("-------------------------------------------------------")
print("Aclaración: Nota 2 equivalente al 60% de la nota final.")
print("-------------------------------------------------------")
print("")

PNOTA2 = float(NOTA2) * 60/100

print("\tSu nota parcial es : " + str(PNOTA2))
print("")

NFINAL = float(PNOTA1) + float(PNOTA2)
print("-------------------------------------------------------")
print("\t\tSU NOTA FINAL ES : " + str(NFINAL))
print("-------------------------------------------------------")
#_END_.